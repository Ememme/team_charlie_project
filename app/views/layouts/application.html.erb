<!DOCTYPE html>
<html>
  <head>
    <title>Itjuniors</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-inverse navbar-fixed-top">
       <div class="container">
         <div class="navbar-header">
           <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
             <span class="sr-only">Toggle navigation</span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
           </button>
           <%= link_to "ITJuniors", root_path, class: "navbar-brand" %>
         </div>
         <div id="navbar" class="navbar-collapse collapse">
           <ul class="navbar-form navbar-right">
             <li>
               <%= render "/devise/menu/login_items" %>
             </li>
             <li>
               <% if I18n.locale == I18n.default_locale %>
               <%= link_to "Polski", { :locale=>'pl' }, class: "btn-sm btn-default" %>
               <% else %>
               <%= link_to "English", { :locale=>'en' }, class: "btn-sm btn-default" %>
               <%end%>
             </li>
           </ul>
         </div><!--/.navbar-collapse -->
       </div>
     </nav>


    <%= yield %>


    <footer class="footer">
        <span class="text-muted">&copy; Charlie Project NCC</span>
    </footer>

  </body>
</html>
