= simple_form_for @user do |f|
  %p
    = f.label :first_name
    %br/
    = f.text_field :first_name
  %p
    = f.label :last_name
    %br/
    = f.text_area :last_name
  %p
    = f.submit

= @technologies.each do |f|
  = f.name
  = link_to "add to skills", skills_create_path(user_id: @user.id, technology_id: f.id, level_id: 1)
