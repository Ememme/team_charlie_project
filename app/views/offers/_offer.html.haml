%strong= offer.title
%p
  =offer.description
  %br/
  ="#{t 'activerecord.models.company.one'}: "
  =link_to "#{offer.company.name}", offer.company
  %br/
  ="#{t 'activerecord.attributes.offer.location'}: "
  ="#{offer.location}"
  %br/
  ="#{t 'activerecord.attributes.offer.salary'}: "
  ="#{offer.salary_min.to_s}#{offer.currency.symbol} - #{offer.salary_max.to_s}#{offer.currency.symbol}"
="#{t 'activerecord.attributes.offer.skills_requirements'}: "
= offer.skills_requirements.map{|skill| "#{skill.technology.name} (#{skill.level.name})"}.join(", ")
%hr/
